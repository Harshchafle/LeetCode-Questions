class Solution {
    public String decodeCiphertext(String str, int rows) {
        if(rows == 1) return str;
        int len = str.length();
        int diff = len/rows;
        StringBuilder ans = new StringBuilder();
        diff++;
        // System.out.println(diff+" "+len);
        for(int i = 0; i < diff; i++){
            for(int j = i; j < len; j += diff){
                ans.append(str.charAt(j));
            }
        }
        return ans.toString().stripTrailing();
    }
}
